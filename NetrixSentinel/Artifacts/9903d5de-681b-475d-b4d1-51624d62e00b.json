{
  "kind": "template",
  "properties": {
    "displayName": "KnownCloudIP",
    "description": "",
    "dependsOn": [],
    "template": {
      "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "FunctionName": {
          "defaultValue": "UpdateCloudIPs",
          "type": "string",
          "metadata": {
            "description": "Specifies the name of the Function App."
          }
        },
        "ASSubscriptionId": {
          "defaultValue": "Enter the Subscription Id for the Azure Sentinel Workspace",
          "type": "string",
          "metadata": {
            "description": "The subscription Id where the Azure Sentinel workspace resides."
          }
        },
        "ASResourceGroupName": {
          "defaultValue": "Enter the resource group name for the Azure Sentinel workspace",
          "type": "string",
          "metadata": {
            "description": "The resource group name where the Azure Sentinel workspae resides"
          }
        },
        "ASWorkspaceName": {
          "defaultValue": "Enter the Azure Sentinel workspace name",
          "type": "string",
          "metadata": {
            "description": "The name of the Azure Sentinel workspace"
          }
        },
        "AWS": {
          "type": "string",
          "defaultValue": "Yes",
          "allowedValues": [
            "Yes",
            "No"
          ],
          "metadata": {
            "description": "Choose yes to handle AWS Cloud IP Ranges"
          }
        },
        "GCP": {
          "type": "string",
          "defaultValue": "Yes",
          "allowedValues": [
            "Yes",
            "No"
          ],
          "metadata": {
            "description": "Choose yes to handle GCP Cloud IP Ranges"
          }
        },
        "Azure": {
          "type": "string",
          "defaultValue": "Yes",
          "allowedValues": [
            "Yes",
            "No"
          ],
          "metadata": {
            "description": "Choose yes to handle Azure Cloud IP Ranges"
          }
        }
      },
      "variables": {
        "FunctionName": "[concat(toLower(parameters('FunctionName')) )]",
        "StorageAccountName": "[concat(substring(variables('FunctionName'), 0, 14), 'sa')]",
        "StorageSuffix": "[environment().suffixes.storage]",
        "resourceURI": "[environment().resourceManager]"
      },
      "resources": [
        {
          "type": "Microsoft.Insights/components",
          "apiVersion": "2015-05-01",
          "name": "[variables('FunctionName')]",
          "location": "[resourceGroup().location]",
          "kind": "web",
          "properties": {
            "Application_Type": "web",
            "ApplicationId": "[variables('FunctionName')]"
          }
        },
        {
          "type": "Microsoft.Storage/storageAccounts",
          "apiVersion": "2019-06-01",
          "name": "[variables('StorageAccountName')]",
          "location": "[resourceGroup().location]",
          "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
          },
          "kind": "StorageV2",
          "properties": {
            "networkAcls": {
              "bypass": "AzureServices",
              "virtualNetworkRules": [],
              "ipRules": [],
              "defaultAction": "Allow"
            },
            "supportsHttpsTrafficOnly": true,
            "encryption": {
              "services": {
                "file": {
                  "keyType": "Account",
                  "enabled": true
                },
                "blob": {
                  "keyType": "Account",
                  "enabled": true
                }
              },
              "keySource": "Microsoft.Storage"
            }
          }
        },
        {
          "type": "Microsoft.Storage/storageAccounts/blobServices",
          "apiVersion": "2019-06-01",
          "name": "[concat(variables('StorageAccountName'), '/default')]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
          ],
          "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
          },
          "properties": {
            "cors": {
              "corsRules": []
            },
            "deleteRetentionPolicy": {
              "enabled": false
            }
          }
        },
        {
          "type": "Microsoft.Storage/storageAccounts/fileServices",
          "apiVersion": "2019-06-01",
          "name": "[concat(variables('StorageAccountName'), '/default')]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
          ],
          "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
          },
          "properties": {
            "cors": {
              "corsRules": []
            }
          }
        },
        {
          "type": "Microsoft.Web/serverfarms",
          "apiVersion": "2018-02-01",
          "name": "[variables('FunctionName')]",
          "location": "[resourceGroup().location]",
          "sku": {
            "name": "Y1",
            "tier": "Dynamic"
          },
          "kind": "functionapp",
          "properties": {
            "name": "[variables('FunctionName')]",
            "workerSize": "0",
            "workerSizeId": "0",
            "numberOfWorkers": "1"
          }
        },
        {
          "type": "Microsoft.Web/sites",
          "apiVersion": "2018-11-01",
          "name": "[variables('FunctionName')]",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]",
            "[resourceId('Microsoft.Web/serverfarms', variables('FunctionName'))]",
            "[resourceId('Microsoft.Insights/components', variables('FunctionName'))]"
          ],
          "kind": "functionapp",
          "identity": {
            "type": "SystemAssigned"
          },
          "properties": {
            "name": "[variables('FunctionName')]",
            "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('FunctionName'))]",
            "httpsOnly": true,
            "clientAffinityEnabled": true,
            "alwaysOn": true,
            "reserved": true,
            "siteConfig": {
              "powerShellVersion": "~7"
            }
          },
          "resources": [
            {
              "apiVersion": "2018-11-01",
              "type": "config",
              "name": "appsettings",
              "dependsOn": [
                "[concat('Microsoft.Web/sites/', variables('FunctionName'))]"
              ],
              "properties": {
                "FUNCTIONS_EXTENSION_VERSION": "~3",
                "FUNCTIONS_WORKER_RUNTIME": "powershell",
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.insights/components', variables('FunctionName')), '2015-05-01').InstrumentationKey]",
                "APPLICATIONINSIGHTS_CONNECTION_STRING": "[reference(resourceId('microsoft.insights/components', variables('FunctionName')), '2015-05-01').ConnectionString]",
                "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', toLower(variables('StorageAccountName')),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), '2019-06-01').keys[0].value, ';EndpointSuffix=',toLower(variables('StorageSuffix')))]",
                "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', toLower(variables('StorageAccountName')),';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), '2019-06-01').keys[0].value, ';EndpointSuffix=',toLower(variables('StorageSuffix')))]",
                "WEBSITE_CONTENTSHARE": "[toLower(variables('FunctionName'))]",
                "subscriptionId": "[parameters('ASSubscriptionId')]",
                "ResourceGroupName": "[parameters('ASResourceGroupName')]",
                "workspaceName": "[parameters('ASWorkspaceName')]",
                "resourceURI": "[variables('resourceURI')]",
                "AWS": "[parameters('AWS')]",
                "GCP": "[parameters('GCP')]",
                "Azure": "[parameters('Azure')]",
                "WEBSITE_RUN_FROM_PACKAGE": "https://aka.ms/updatecloudipsazurefunctionzip"
              }
            }
          ]
        },
        {
          "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
          "apiVersion": "2019-06-01",
          "name": "[concat(variables('StorageAccountName'), '/default/azure-webjobs-hosts')]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('StorageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
          "apiVersion": "2019-06-01",
          "name": "[concat(variables('StorageAccountName'), '/default/azure-webjobs-secrets')]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('StorageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
          "apiVersion": "2019-06-01",
          "name": "[concat(variables('StorageAccountName'), '/default/', tolower(variables('StorageAccountName')))]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/fileServices', variables('StorageAccountName'), 'default')]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
          ],
          "properties": {
            "shareQuota": 5120
          }
        }
      ]
    },
    "resourceGroup": "ResourceGroup",
    "parameters": {
      "FunctionName": {
        "value": "UpdateCloudIPs"
      },
      "ASSubscriptionId": {
        "value": "[parameters('knownCloudIP_ASSubscriptionId')]"
      },
      "ASResourceGroupName": {
        "value": "[parameters('knownCloudIP_ASResourceGroupName')]"
      },
      "ASWorkspaceName": {
        "value": "[parameters('knownCloudIP_ASWorkspaceName')]"
      },
      "AWS": {
        "value": "Yes"
      },
      "GCP": {
        "value": "Yes"
      },
      "Azure": {
        "value": "Yes"
      }
    }
  }
}